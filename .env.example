# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DB_PATH=data/monik.db
DB_MAX_OPEN_CONN=25
DB_MAX_IDLE_CONN=5

# Router Configuration
ROUTER_IP=192.168.88.1
ROUTER_PORT=8888
ROUTER_USERNAME=admin
ROUTER_PASSWORD=""
ROUTER_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info

# Versioning Configuration
VERSIONING_ENABLED=true
VERSIONING_STRATEGY=semantic
CHANGELOG_PATH=CHANGELOG.md
APP_VERSION=1.0.0

# WAN Detection Configuration
WAN_ENABLED=true
WAN_DETECTION_METHOD=auto
WAN_MANUAL_INTERFACE=
WAN_CACHE_DURATION=5m
WAN_TRAFFIC_THRESHOLD=1048576

# Worker Pool Configuration
WORKER_MAX_WORKERS=4
WORKER_QUEUE_SIZE=100
WORKER_TIMEOUT=30s
WORKER_LOAD_THRESHOLD=0.8
WORKER_REBALANCE_EVERY=5m
WORKER_LOAD_BALANCING_STRATEGY=round_robin
WORKER_CIRCUIT_BREAKER_ENABLED=true
WORKER_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
WORKER_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60s
WORKER_CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=3

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_READ_TIMEOUT=60s
WEBSOCKET_WRITE_TIMEOUT=10s
WEBSOCKET_PING_PERIOD=54s
WEBSOCKET_MAX_MESSAGE_SIZE=512
WEBSOCKET_BROADCAST_BUFFER_SIZE=10000
WEBSOCKET_ENABLE_METRICS=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=30s
METRICS_ENABLE_HEALTH_CHECK=true
METRICS_HEALTH_CHECK_INTERVAL=60s
METRICS_BROADCAST_METRICS=true

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_REAL_TIME_UPDATE_INTERVAL=1s
DASHBOARD_MAX_CONNECTIONS=100
DASHBOARD_ENABLE_METRICS=true